<subsystem xmlns="urn:org.jboss.aerogear.simplepush:1.0">
    <server 
        socket-binding="simplepush" 
        datasource-jndi-name="TestDS" 
        token-key="testing" 
        useragent-reaper-timeout="16000" 
        notification-prefix="/update" 
